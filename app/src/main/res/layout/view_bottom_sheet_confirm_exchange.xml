<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sh_confirm_exchange"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="24dp"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bottom_sh_confirm_exchange.offerer_imageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            android:src="@drawable/bg_west"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />


        <TextView
            android:id="@+id/bottom_sh_confirm_exchange.tvOffererName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Person Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintLeft_toRightOf="@+id/bottom_sh_confirm_exchange.offerer_imageView"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/bottom_sh_confirm_exchange.offerer_imageView"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/bottom_sh_confirm_exchange.tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/03/2017"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sh_confirm_exchange.offerer_imageView"
            android:id="@+id/bottom_sh_confirm_exchange.separator1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/bottom_sh_confirm_exchange.tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="Name Of Thing"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sh_confirm_exchange.separator1" />

        <TextView
            android:id="@+id/bottom_sh_confirm_exchange.tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            android:text="@string/lorem"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sh_confirm_exchange.tvName"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/grey2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sh_confirm_exchange.tvDescription"
            android:id="@+id/bottom_sh_confirm_exchange.separator2"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/bottom_sh_confirm_exchange.icon_exchange"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_exchange_black_24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sh_confirm_exchange.separator2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bottom_sh_confirm_exchange.thing2_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="44dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            android:src="@drawable/bg_blue"
            app:layout_constraintLeft_toRightOf="@+id/bottom_sh_confirm_exchange.icon_exchange"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sh_confirm_exchange.separator2" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bottom_sh_confirm_exchange.thing1_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="44dp"
            android:src="@drawable/bg_blue"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintRight_toLeftOf="@+id/bottom_sh_confirm_exchange.icon_exchange"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sh_confirm_exchange.separator2" />


        <Button
            android:id="@+id/bottom_sh_confirm_exchange.btnAccept"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="48dp"
            android:text="Confirm Exchange"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_sh_confirm_exchange.icon_exchange" />


    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>