<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_sheet_confirm_exchange"
    android:background="@color/white"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    >

    <ImageView
        android:id="@+id/bottom_sheet_confirm_exchange.icon_exchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:srcCompat="@drawable/ic_exchange_black_24dp"
        android:layout_centerHorizontal="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bottom_sheet_confirm_exchange.thing1_imageView"
        android:src="@drawable/bg_pinky_sky"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/bottom_sheet_confirm_exchange.icon_exchange"
        android:layout_toStartOf="@+id/bottom_sheet_confirm_exchange.icon_exchange" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bottom_sheet_confirm_exchange.thing2_imageView"
        android:src="@drawable/bg_blue"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/bottom_sheet_confirm_exchange.icon_exchange"
        android:layout_toEndOf="@+id/bottom_sheet_confirm_exchange.icon_exchange" />


    <View
        android:id="@+id/bottom_sheet_confirm_exchange.separator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@id/bottom_sheet_confirm_exchange.thing1_imageView"/>

    <TextView
        android:id="@+id/bottom_sheet_confirm_exchange.tvName"
        android:text="Name of thing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/bottom_sheet_confirm_exchange.separator"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    <TextView
        android:id="@+id/bottom_sheet_confirm_exchange.tvDescription"
        android:text="@string/lorem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@+id/bottom_sheet_confirm_exchange.tvName"
        android:layout_centerHorizontal="true"
        />


    <View
        android:id="@+id/bottom_sheet_confirm_exchange.separator2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_below="@id/bottom_sheet_confirm_exchange.tvDescription"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/bottom_sheet_confirm_exchange.offerer_imageView"
        android:src="@drawable/bg_west"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        android:layout_below="@+id/bottom_sheet_confirm_exchange.separator2"
        android:layout_alignLeft="@+id/bottom_sheet_confirm_exchange.separator2"
        android:layout_alignStart="@+id/bottom_sheet_confirm_exchange.separator2" />

    <TextView
        android:id="@+id/bottom_sheet_confirm_exchange.tvOffererName"
        android:text="Name OfPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_alignTop="@+id/bottom_sheet_confirm_exchange.offerer_imageView"
        android:layout_toEndOf="@+id/bottom_sheet_confirm_exchange.offerer_imageView"
        android:layout_toRightOf="@+id/bottom_sheet_confirm_exchange.offerer_imageView"
        />

    <Button
        android:id="@+id/bottom_sheet_confirm_exchange.btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Confirm exchange"
        android:layout_below="@+id/bottom_sheet_confirm_exchange.offerer_imageView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
